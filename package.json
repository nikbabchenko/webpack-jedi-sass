    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^2.1.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "8.x.x",
    "stylelint-config-standard": "^17.0.0",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "lodash": "^4.17.4",
    "reset.scss": "^1.0.0",
    "slick-carousel": "^1.8.1"
  }
